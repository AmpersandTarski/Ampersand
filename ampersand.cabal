                    hashable >= 1.2 ,
                    time >= 1.4.0.1,
                    SpreadsheetML >= 0.1 ,
                    process >= 1.1.0.1 ,
                    split >= 0.1 ,
                    old-locale >= 1.0.0.4,
                    ConfigFile >= 1.1.1,
                    uulib >= 0.9 && < 1.0
                    
