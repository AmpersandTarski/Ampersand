  main-is:           Main.hs
  hs-source-dirs:    src/exec
  build-depends:     ampersand == 3.0.3,
                     graphviz >= 2999.16.0.0 ,
                     filepath >= 1.3.0.0 ,
                     base >= 4.5.0.0
  default-language:  Haskell2010
  ghc-options:       -rtsopts
  --inspired by http://stackoverflow.com/questions/7140732/haskell-space-overflow :
                     -O2
  if flag(executable)
    buildable:  True
  else
    buildable:  False

