CONTEXT SelectExprTest

PURPOSE PATTERN SelectExprTest IN ENGLISH 
{+
This pattern is meant to test the translation of Expressions in Ampersand into
SELECT statements in SQL.
-}

PATTERN SelectExprTest
  r :: A*A
  s :: A*A
  t :: A*B
ENDPATTERN

INTERFACE Overview : I[ONE]
  BOX [ as : V[ONE*A]
        BOX [ "id" : I
            , "r"  : r
            , s    : s
            , t    : t
            ]
      ]

INTERFACE Id : I[A]
  BOX [ id         : I[A]
      , r          : r
      , s          : s
      , t          : t
      , "r/\\s"    : r/\s
      , "r\\/s"    : r\/s
      , "r;s"      : r;s
      , "r;t"      : r;t
      , "r!s"      : r!s
      , "r!t"      : r!t
      , "r\\s"     : r\s
      , "r/s"      : r/s
      , "r-s"      : r-s
      , "r*"       : r*
      , "r+"       : r+
      ]

POPULATION r CONTAINS
    [ ("1", "Guggenheim Museum")
    ; ("2", "France")
    ; ("3", "Rutte")
    ]

ENDCONTEXT
