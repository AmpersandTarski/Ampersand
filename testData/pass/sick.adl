CONTEXT Test
-- Dit bestand is bedoeld om alle foutmeldingen van de ADL-typechecker tenminste éénmaal te testen.

PATTERN Type1Error
r :: A*B.
t :: B*A.
s :: A*B.
r = s;t
ENDPATTERN

PATTERN Type2Error
sees :: Comp*Comp.
sees :: Component*Comp.
sees;sees~ |- sees
ENDPATTERN

PATTERN Type3Error
sees :: Comp*Comp.
sees :: Component*Comp.
sees;sees~ |- sendr
ENDPATTERN

PATTERN Type4Error
lineReceiver :: Line*Object.
method :: Line*Method.
sees :: Comp*Comp.
sees :: Component*Comp.
  lineReceiver~;method /\ sees |- sees
  lineReceiver~;method \/ sees |- sees
ENDPATTERN

PATTERN Type5Error
lineSender :: Line*Object.
method :: Line*Method.
sees :: Comp*Comp.
  lineSender;method /\ sees |- sees
ENDPATTERN

PATTERN Type6Error
meth :: Line*Object.
meth :: Line*Method.
send :: Comp*Object.
send :: Comp*Method.
comp :: Line * Comp.
  meth;send~ |- comp
ENDPATTERN

PATTERN Type7Error
roeptaan :: Component*Service [TRN,RFX].
ENDPATTERN

PATTERN Type8Error
I=I
ENDPATTERN

SERVICE Type9Error [A]
 = [ t ]

SERVICE Type10Error [Comp]
 = [ sees
     = [ a:sees[Component*Comp]
       , b:sees[Comp*Comp]
       ]
   ]

SERVICE Type11Error [Comp]
 = [ a: sees~ ]


-- Type12Error ??


PATTERN Type15Error
van         :: Toegangsrecht * Medewerker.
op          :: Toegangsrecht * Document.
I |- van~;op
ENDPATTERN

PATTERN Type16Error
van         :: Toegangsrecht * Medewerker.
op          :: Toegangsrecht * Document.
van~;op |- I
ENDPATTERN

-- the following should not produce mistakes:

PATTERN Correct
r :: B*A.
t :: B*A.
s :: A*B.
r |- s~ /\ t
r |- t /\ s~
r |- t /\ s~ \/ s~
ENDPATTERN
ENDCONTEXT